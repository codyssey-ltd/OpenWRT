config rule 'rule80'
	option dest 'wan'
	option name 'Block access to Limbo'
	option src 'lan'
	option target 'REJECT'
	list dest_ip '10.149.128.0/17'

config rule 'rule81'
	option name 'Block SSH access from LAN'
	option src 'lan'
